@model MeroOraTipus

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Mérő tipus létrehozása</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Name">Név</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary" style="width:150px">OK</button>
        <a asp-controller="MeroOraTipus" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Vissza a Merőtipusokhoz
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial Name="_ValidationScriptsPartial" />
    }
}
